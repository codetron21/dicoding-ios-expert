platform :ios, '13.0'

use_frameworks!
workspace 'AnimeApp'

target 'AnimeApp' do
  pod 'SDWebImage'
  pod 'SwiftLint'
  pod 'RxSwift'
  pod 'Alamofire'
  pod 'RealmSwift', '~>10'
end

target 'Core' do
  project '../Core/Core'
end

target 'Home' do
  project '../Home/Home'
end

target 'Detail' do
  project '../Detail/Detail'
end

target 'Favorite' do
  project '../Favorite/Favorite'
end

target 'About' do
  project '../About/About'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings.delete 'IPHONEOS_DEPLOYMENT_TARGET'
    end
  end
end
